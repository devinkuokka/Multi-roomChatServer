			-o-transition: all 0.5s ease;
			transition: all 0.5s ease;
		}
		
		#wrapper.toggled #sidebar-wrapper {
			width: 250px;
		}
		
		#chatroom-wrapper {
			height: 100%;
			width: 100%;
			position: absolute;
			padding: 15px;
		}
		
		#wrapper.toggled #chatroom-wrapper {
			position: absolute;
			margin-right: -250px;
		}
		
