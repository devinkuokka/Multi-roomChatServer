	<!-- Menu Toggle Script -->
    <script>
		$(document).ready(function() {	
			$("#menu-toggle").click(function(e) {
				e.preventDefault();
				$("#wrapper").toggleClass("toggled");
			});
		});
    </script>
	
	<style>
		/* Toggle Styles */
		html, body {
			height: 100%;
		}
		
		#wrapper {
			height: 100%;
			padding-left: 0;
			-webkit-transition: all 0.5s ease;
